{
  "name": "muscles-monorepo",
  "version": "1.0.0",
  "description": "Muscles HIIT application - monolithic Flask + React deployment",
  "private": true,
  "workspaces": [
    "frontend/web",
    "backend/api"
  ],
  "scripts": {
    "install:frontend": "yarn workspace muscles-web install",
    "install:backend": "cd backend/api && pip install -r requirements.txt",
    "build:frontend": "yarn workspace muscles-web build",
    "test:backend": "cd backend/api && python -m pytest tests/unit/test_simple.py -v",
    "lint:frontend": "yarn workspace muscles-web lint",
    "type-check:backend": "cd backend/api && mypy src/main.py",
    "dev:frontend": "yarn workspace muscles-web dev",
    "dev:backend": "cd backend/api && python src/main.py",
    "validate": "./validate_deployment.sh",
    "build": "yarn workspaces foreach --all run build",
    "test": "yarn workspaces foreach --all run test",
    "dev": "yarn workspaces foreach --parallel --interlaced run dev"
  },
  "engines": {
    "node": ">=20",
    "python": ">=3.11",
    "yarn": ">=4.9.2"
  },
  "packageManager": "yarn@4.9.2"
}
